<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/match_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC"
                style="@style/ActionButton"
                android:text="AC" />

            <TextView
                android:id="@+id/o_bracket"
                style="@style/ActionButton"
                android:text="(" />

            <TextView
                android:id="@+id/c_bracket"
                style="@style/ActionButton"
                android:text=")" />

            <TextView
                android:id="@+id/btn_division"
                style="@style/ActionButton"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/numb_7"
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                android:id="@+id/numb_8"
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                android:id="@+id/numb_9"
                style="@style/NumberButton"
                android:text="9" />

            <TextView
                android:id="@+id/btn_mult"
                style="@style/ActionButton"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/numb_4"
                style="@style/NumberButton"
                android:text="4" />

            <TextView
                android:id="@+id/numb_5"
                style="@style/NumberButton"
                android:text="5" />

            <TextView
                android:id="@+id/numb_6"
                style="@style/NumberButton"
                android:text="6" />

            <TextView
                android:id="@+id/btn_plus"
                style="@style/ActionButton"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/numb_1"
                style="@style/NumberButton"
                android:text="1" />

            <TextView
                android:id="@+id/numb_2"
                style="@style/NumberButton"
                android:text="2" />

            <TextView
                android:id="@+id/numb_3"
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                android:id="@+id/minus_btn"
                style="@style/ActionButton"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dot_btn"
                style="@style/NumberButton"
                android:text="." />

            <TextView
                android:id="@+id/numb_0"
                style="@style/NumberButton"
                android:text="0" />

            <TextView
                android:id="@+id/back_btn"
                style="@style/NumberButton"
                android:text="Back" />

            <TextView
                android:id="@+id/equal_btn"
                style="@style/ActionButton"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

